---
import '../styles/global.css';


interface Props {
	title?: string;
	description?: string;
}

const { title = "Maxime LE JEUNE - Développeur Web", description = "Développeur web passionné spécialisé dans l'écosystème Symfony" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator}>
    <link rel="icon" type="image/x-icon" href="/assets/img/my-face-maxime.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet"></noscript>
    <title>{title}</title>
</head>
<body class="bg-dark text-white font-poppins overflow-x-hidden overflow-y-auto">
    <slot />
</body>
</html>
