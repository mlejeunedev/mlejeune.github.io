---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import projetsData from '../data/projets.json';
import { base } from '../config';

// Filtrer uniquement les projets actifs
const projets = projetsData.filter(projet => projet.actif);
---

<Layout title="Projets - Maxime LE JEUNE" description="Découvrez mes projets web et explorez mon travail en développement avec Symfony, PHP et les technologies modernes du web.">
    <Header />

    <!-- Premium Background -->
    <div class="premium-bg"></div>

    <main class="min-h-screen relative z-10">
        <div class="max-w-[1280px] mx-auto px-8 lg:px-12">

            <!-- Page Title -->
            <section class="pt-32 pb-16">
                <a href={`${base}/`} class="inline-flex items-center gap-2 text-[#2997ff] hover:text-white transition-colors mb-6 group">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="transform transition-transform group-hover:-translate-x-1">
                        <path d="M19 12H5M5 12L12 19M5 12L12 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    <span class="text-sm font-medium">Retour</span>
                </a>
                <h1 class="text-5xl sm:text-6xl font-bold tracking-tighter leading-none mb-4 text-gradient-premium">
                    Mes Projets
                </h1>
                <p class="text-lg text-[#a1a1a6]">
                    Découvrez mes réalisations en développement web
                </p>
            </section>

            <!-- Projects Grid -->
            <section class="pb-24">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">

                    {projets.length > 0 ? (
                        projets.map(projet => (
                            <div class="ultra-glass card-premium rounded-2xl p-6 group">
                                <div class="mb-4">
                                    <div class="w-12 h-12 bg-[#2997ff]/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-[#2997ff]/20 transition-colors">
                                        {projet.icone === 'LineChart' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#2997ff]">
                                                <path d="M3 3v18h18"></path>
                                                <path d="m19 9-5 5-4-4-3 3"></path>
                                            </svg>
                                        )}
                                        {projet.icone === 'ShoppingCart' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#2997ff]">
                                                <circle cx="8" cy="21" r="1"></circle>
                                                <circle cx="19" cy="21" r="1"></circle>
                                                <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"></path>
                                            </svg>
                                        )}
                                        {projet.icone === 'Watch' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#2997ff]">
                                                <circle cx="12" cy="12" r="6"></circle>
                                                <polyline points="12 10 12 12 13 13"></polyline>
                                                <path d="m16.13 7.66-.81-4.05a2 2 0 0 0-2-1.61h-2.68a2 2 0 0 0-2 1.61l-.78 4.05"></path>
                                                <path d="m7.88 16.36.8 4a2 2 0 0 0 2 1.61h2.72a2 2 0 0 0 2-1.61l.81-4.05"></path>
                                            </svg>
                                        )}
                                        {projet.icone === 'Car' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#2997ff]">
                                                <path d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2"></path>
                                                <circle cx="7" cy="17" r="2"></circle>
                                                <path d="M9 17h6"></path>
                                                <circle cx="17" cy="17" r="2"></circle>
                                            </svg>
                                        )}
                                    </div>
                                    <h3 class="text-xl font-semibold text-[#f5f5f7] mb-2">{projet.titre}</h3>
                                    <p class="text-sm text-[#a1a1a6] leading-relaxed">
                                        {projet.description}
                                    </p>
                                </div>

                                <div class="flex flex-wrap gap-2 mb-4">
                                    {projet.technologies.map(tech => (
                                        <div class="px-3 py-1.5 bg-white/5 rounded-lg border border-white/10">
                                            <span class="text-xs font-medium text-[#f5f5f7]">{tech}</span>
                                        </div>
                                    ))}
                                </div>

                                <div class="flex gap-3 pt-3 border-t border-white/5">
                                    {projet.lienGithub && (
                                        <a href={projet.lienGithub} target="_blank" class="inline-flex items-center gap-2 text-[#2997ff] hover:text-white transition-colors text-sm font-medium">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                                                <path d="M9 18c-4.51 2-5-2-7-2"></path>
                                            </svg>
                                            <span>Code</span>
                                        </a>
                                    )}
                                    {projet.lienDemo && (
                                        <a href={projet.lienDemo} target="_blank" class="inline-flex items-center gap-2 text-[#2997ff] hover:text-white transition-colors text-sm font-medium">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                                                <polyline points="15 3 21 3 21 9"></polyline>
                                                <line x1="10" y1="14" x2="21" y2="3"></line>
                                            </svg>
                                            <span>Démo</span>
                                        </a>
                                    )}
                                </div>
                            </div>
                        ))
                    ) : (
                        <!-- Empty State -->
                        <div class="ultra-glass rounded-2xl p-6 md:col-span-2 lg:col-span-3">
                            <div class="text-center py-12">
                                <div class="w-16 h-16 bg-[#2997ff]/10 rounded-2xl flex items-center justify-center mx-auto mb-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-[#2997ff]">
                                        <path d="M4 20h16a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.93a2 2 0 0 1-1.66-.9l-.82-1.2A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13c0 1.1.9 2 2 2Z"></path>
                                    </svg>
                                </div>
                                <p class="text-lg font-medium text-[#f5f5f7] mb-2">Projets à venir</p>
                                <p class="text-sm text-[#a1a1a6]">Cette section sera bientôt mise à jour avec mes projets.</p>
                            </div>
                        </div>
                    )}

                </div>
            </section>

            <!-- Footer -->
            <footer class="pb-24 text-center">
                <p class="text-sm text-[#86868b] font-medium">© 2025 Maxime LE JEUNE. Tous droits réservés.</p>
            </footer>

        </div>
    </main>
</Layout>
