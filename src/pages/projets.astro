---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import projetsData from '../data/projets.json';
import { base } from '../config';

// Filtrer uniquement les projets actifs
const projets = projetsData.filter(projet => projet.actif);
---

<Layout title="Projets - Maxime LE JEUNE" description="Découvrez mes projets web et explorez mon travail en développement avec Symfony, PHP et les technologies modernes du web.">
    <Header />

    <!-- Audacious Background -->
    <div class="audacious-bg"></div>

    <main class="min-h-screen relative z-10">
        <div class="max-w-[1280px] mx-auto px-6 lg:px-12">

            <!-- Page Title -->
            <section class="pt-40 pb-20">
                <a href={`${base}/`} class="inline-flex items-center gap-2 text-gray-400 hover:text-white transition-colors mb-8 group">
                    <div class="w-8 h-8 rounded-full bg-white/5 flex items-center justify-center group-hover:bg-white/10 transition-colors">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" class="transform transition-transform group-hover:-translate-x-1" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M19 12H5M5 12L12 19M5 12L12 5"/>
                        </svg>
                    </div>
                    <span class="text-sm font-medium">Retour à l'accueil</span>
                </a>
                
                <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight leading-none mb-6 animate-slide-up stagger-1">
                    <span class="text-gradient-bold">Mes Projets</span>
                </h1>
                <p class="text-xl text-gray-400 max-w-2xl animate-slide-up stagger-2">
                    Une sélection de mes réalisations en développement web, alliant performance et design.
                </p>
            </section>

            <!-- Projects Grid -->
            <section class="pb-32 animate-slide-up stagger-3">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">

                    {projets.length > 0 ? (
                        projets.map((projet, index) => (
                            <div class="glass-panel rounded-3xl p-8 group flex flex-col h-full hover:border-blue-500/30 transition-all duration-500" style={`animation-delay: ${index * 100}ms`}>
                                <div class="mb-6 flex items-start justify-between">
                                    <div class="w-14 h-14 bg-gradient-to-br from-blue-500/10 to-purple-500/10 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-500 border border-white/5">
                                        {projet.icone === 'LineChart' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-blue-400">
                                                <path d="M3 3v18h18"></path>
                                                <path d="m19 9-5 5-4-4-3 3"></path>
                                            </svg>
                                        )}
                                        {projet.icone === 'ShoppingCart' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-purple-400">
                                                <circle cx="8" cy="21" r="1"></circle>
                                                <circle cx="19" cy="21" r="1"></circle>
                                                <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57l1.65-7.43H5.12"></path>
                                            </svg>
                                        )}
                                        {projet.icone === 'Watch' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-pink-400">
                                                <circle cx="12" cy="12" r="6"></circle>
                                                <polyline points="12 10 12 12 13 13"></polyline>
                                                <path d="m16.13 7.66-.81-4.05a2 2 0 0 0-2-1.61h-2.68a2 2 0 0 0-2 1.61l-.78 4.05"></path>
                                                <path d="m7.88 16.36.8 4a2 2 0 0 0 2 1.61h2.72a2 2 0 0 0 2-1.61l.81-4.05"></path>
                                            </svg>
                                        )}
                                        {projet.icone === 'Car' && (
                                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-green-400">
                                                <path d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2"></path>
                                                <circle cx="7" cy="17" r="2"></circle>
                                                <path d="M9 17h6"></path>
                                                <circle cx="17" cy="17" r="2"></circle>
                                            </svg>
                                        )}
                                    </div>
                                    {projet.lienDemo && (
                                        <a href={projet.lienDemo} target="_blank" class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center text-gray-400 hover:text-white hover:bg-blue-500 transition-all" title="Voir le site">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                                                <polyline points="15 3 21 3 21 9"></polyline>
                                                <line x1="10" y1="14" x2="21" y2="3"></line>
                                            </svg>
                                        </a>
                                    )}
                                </div>

                                <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-blue-400 transition-colors">{projet.titre}</h3>
                                <p class="text-gray-400 leading-relaxed mb-6 flex-grow">
                                    {projet.description}
                                </p>

                                <div class="flex flex-wrap gap-2 mb-6">
                                    {projet.technologies.map(tech => (
                                        <div class="px-3 py-1 bg-white/5 rounded-md border border-white/5 text-xs font-medium text-gray-300">
                                            {tech}
                                        </div>
                                    ))}
                                </div>

                                <div class="pt-6 border-t border-white/5 flex items-center justify-between">
                                    {projet.lienGithub ? (
                                        <a href={projet.lienGithub} target="_blank" class="inline-flex items-center gap-2 text-sm font-medium text-gray-400 hover:text-white transition-colors">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                                                <path d="M9 18c-4.51 2-5-2-7-2"></path>
                                            </svg>
                                            <span>Code Source</span>
                                        </a>
                                    ) : (
                                        <span class="text-xs text-gray-600 italic">Code privé</span>
                                    )}
                                </div>
                            </div>
                        ))
                    ) : (
                        <!-- Empty State -->
                        <div class="glass-panel rounded-3xl p-12 md:col-span-2 lg:col-span-3 text-center">
                            <div class="w-16 h-16 bg-white/5 rounded-full flex items-center justify-center mx-auto mb-6">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-500">
                                    <path d="M4 20h16a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.93a2 2 0 0 1-1.66-.9l-.82-1.2A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13c0 1.1.9 2 2 2Z"></path>
                                </svg>
                            </div>
                            <p class="text-xl font-medium text-white mb-2">Projets à venir</p>
                            <p class="text-gray-400">Cette section sera bientôt mise à jour avec mes dernières réalisations.</p>
                        </div>
                    )}

                </div>
            </section>

            <!-- Footer -->
            <footer class="pb-12 text-center">
                <p class="text-sm text-gray-600 font-medium">© 2025 Maxime LE JEUNE. Tous droits réservés.</p>
            </footer>

        </div>
    </main>
</Layout>
