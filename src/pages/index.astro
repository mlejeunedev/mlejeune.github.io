---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import homeData from '../data/home.json';
import { base } from '../config';
---

<Layout title="Maxime LE JEUNE - Développeur Web Symfony">
    <Header />

    <!-- Audacious Background -->
    <div class="audacious-bg"></div>

    <main class="min-h-screen relative z-10 overflow-hidden">
        <div class="max-w-[1280px] mx-auto px-6 lg:px-12">

            <!-- Hero Section -->
            <section class="pt-40 pb-32 flex flex-col items-center text-center">
                {homeData.hero.disponible && (
                    <div class="mb-8 animate-fade-in">
                        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 backdrop-blur-md">
                            <span class="relative flex h-2.5 w-2.5">
                              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                              <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-green-500"></span>
                            </span>
                            <span class="text-sm font-medium text-gray-300">{homeData.hero.messageDisponibilite}</span>
                        </div>
                    </div>
                )}

                <h1 class="text-6xl sm:text-7xl lg:text-8xl font-bold tracking-tight leading-[1.1] mb-8 animate-slide-up stagger-1">
                    <span class="text-gradient-bold block">{homeData.hero.nom}</span>
                </h1>

                <p class="text-2xl sm:text-3xl font-medium text-gray-400 mb-4 animate-slide-up stagger-2">
                    {homeData.hero.titre}
                </p>

                <p class="text-lg text-gray-500 mb-12 animate-slide-up stagger-3 max-w-2xl">
                    Spécialisé <span class="text-gradient-accent font-semibold">{homeData.hero.specialisation}</span>
                </p>

                <div class="flex flex-col sm:flex-row items-center gap-6 animate-slide-up stagger-4">
                    <a href={`${base}${homeData.hero.boutons.projets.lien}`} class="btn-primary">
                        {homeData.hero.boutons.projets.texte}
                    </a>
                    <a href="mailto:maximelj44@gmail.com" class="text-[#2997ff] hover:text-white transition-all duration-300 text-lg font-medium flex items-center gap-2 group">
                        <span>{homeData.hero.boutons.contact.texte}</span>
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" class="transform transition-transform group-hover:translate-x-1">
                            <path d="M7 3L14 10L7 17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </a>
                </div>
            </section>

            <!-- Bento Grid -->
            <section class="pb-32">
                <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-6 auto-rows-[180px]">

                    <!-- À propos (2 cols x 2 rows) -->
                    <div class="md:col-span-2 md:row-span-2 glass-panel rounded-3xl p-8 flex flex-col justify-between group">
                        <div>
                            <h2 class="text-2xl font-bold mb-4 text-white group-hover:text-blue-400 transition-colors">
                                {homeData.apropos.titre}
                            </h2>
                            <p class="text-gray-400 leading-relaxed text-lg" set:html={homeData.apropos.description.replace(homeData.hero.specialisation, `<span class="text-blue-400 font-medium">${homeData.hero.specialisation}</span>`)}></p>
                        </div>
                        <div class="flex gap-3 mt-6">
                            {homeData.apropos.badges.map(badge => (
                                <div class="px-4 py-2 bg-white/5 rounded-full border border-white/10 text-sm text-gray-300">
                                    {badge.texte}
                                </div>
                            ))}
                        </div>
                    </div>

                    <!-- Photo (1 col x 2 rows) -->
                    <div class="md:row-span-2 glass-panel rounded-3xl overflow-hidden relative group p-0">
                        <img
                            src={`${base}${homeData.photo.url}`}
                            alt={homeData.photo.alt}
                            loading="lazy"
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    </div>

                    <!-- Stack (1 col x 2 rows) -->
                    <div class="md:row-span-2 glass-panel rounded-3xl p-8">
                        <h3 class="text-xl font-bold mb-6 text-white">{homeData.stack.titre}</h3>
                        <div class="flex flex-wrap gap-2">
                            {homeData.stack.technologies.map(tech => (
                                <div class="px-3 py-1.5 bg-white/5 rounded-lg border border-white/10 text-xs font-medium text-gray-300 hover:bg-white/10 hover:border-blue-500/30 transition-colors cursor-default">
                                    {tech}
                                </div>
                            ))}
                        </div>
                    </div>

                    <!-- Projets (2 cols x 1 row) -->
                    <div class="md:col-span-2 glass-panel rounded-3xl p-8 flex items-center justify-between group cursor-pointer" onclick={`window.location.href='${base}${homeData.projets.bouton.lien}'`}>
                        <div>
                            <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">{homeData.projets.titre}</h3>
                            <p class="text-gray-400">{homeData.projets.description}</p>
                        </div>
                        <div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center group-hover:bg-blue-500 group-hover:text-white transition-all duration-300">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <line x1="5" y1="12" x2="19" y2="12"></line>
                                <polyline points="12 5 19 12 12 19"></polyline>
                            </svg>
                        </div>
                    </div>

                    <!-- CV (1 col x 1 row) -->
                    <a href={`${base}${homeData.cv.lien}`} download class="glass-panel rounded-3xl p-8 flex flex-col justify-center items-center gap-4 group hover:bg-blue-600/20 transition-colors">
                        <div class="w-12 h-12 rounded-full bg-blue-500/20 flex items-center justify-center text-blue-400 group-hover:scale-110 transition-transform">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                <polyline points="10 9 9 9 8 9"></polyline>
                            </svg>
                        </div>
                        <span class="font-bold text-white">Télécharger CV</span>
                    </a>

                    <!-- Contact (1 col x 1 row) -->
                    <div class="glass-panel rounded-3xl p-8 flex flex-col justify-center items-center gap-4">
                        <div class="flex gap-4">
                            {homeData.contact.liens.map(lien => (
                                <a href={lien.url} target={lien.type === 'email' ? '_self' : '_blank'} class="w-10 h-10 flex items-center justify-center rounded-full bg-white/5 hover:bg-white/20 hover:scale-110 transition-all text-gray-300 hover:text-white" title={lien.label}>
                                    {lien.icone === 'Mail' && (
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <rect x="2" y="4" width="20" height="16" rx="2"></rect>
                                            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                                        </svg>
                                    )}
                                    {lien.icone === 'Github' && (
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path>
                                            <path d="M9 18c-4.51 2-5-2-7-2"></path>
                                        </svg>
                                    )}
                                    {lien.icone === 'GitBranch' && (
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <line x1="6" y1="3" x2="6" y2="15"></line>
                                            <circle cx="18" cy="6" r="3"></circle>
                                            <circle cx="6" cy="18" r="3"></circle>
                                            <path d="M18 9a9 9 0 0 1-9 9"></path>
                                        </svg>
                                    )}
                                </a>
                            ))}
                        </div>
                        <span class="text-sm font-medium text-gray-400">Me contacter</span>
                    </div>

                </div>
            </section>

            <!-- Footer -->
            <footer class="pb-12 text-center">
                <p class="text-sm text-gray-600 font-medium">{homeData.footer.texte}</p>
            </footer>

        </div>
    </main>
</Layout>
