---
import { base } from '../config';
const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 header-glass transition-all duration-300">
    <nav class="max-w-[1280px] mx-auto px-6 lg:px-12">
        <div class="flex justify-between items-center h-20">
            <a href={`${base}/`} class="text-xl font-bold text-white hover:text-blue-400 transition-colors tracking-tight">
                mlejeune<span class="text-blue-500">.dev</span>
            </a>

            <div class="flex items-center gap-8">
                <a
                    href={`${base}/projets`}
                    class={`text-sm font-medium ${currentPath.includes('/projets') ? 'text-blue-400' : 'text-gray-300'} hover:text-white transition-colors`}
                >
                    Projets
                </a>
                <a
                    href="mailto:contact@mlejeune.dev"
                    class="px-5 py-2.5 rounded-full bg-white/5 border border-white/10 text-sm font-medium text-white hover:bg-white/10 hover:border-white/20 transition-all"
                >
                    Contact
                </a>
            </div>
        </div>
    </nav>
</header>
