---
import { base } from '../config';
const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 header-glass">
    <nav class="max-w-[980px] mx-auto px-6">
        <div class="flex justify-between items-center h-[44px]">
            <a href={`${base}/`} class="text-[21px] font-semibold text-[#f5f5f7] hover:text-white transition-colors">
                mlejeune.dev
            </a>

            <div class="flex items-center gap-8">
                <a
                    href={`${base}/projets`}
                    class={`text-[12px] ${currentPath.includes('/projets') ? 'text-[#2997ff]' : 'text-[#f5f5f7]'} hover:text-white transition-colors`}
                >
                    Projets
                </a>
                <a
                    href="mailto:maximelj44@gmail.com"
                    class="text-[12px] text-[#f5f5f7] hover:text-white transition-colors"
                >
                    Contact
                </a>
            </div>
        </div>
    </nav>
</header>
